import pygame
import sys

# Initialize Pygame
pygame.init()

# Screen settings
width, height = 800, 600
screen = pygame.display.set_mode((width, height))
pygame.display.set_caption("ðŸŽ‚ Happy Birthday Animation ðŸŽ‰")

# Colors
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
PINK = (255, 105, 180)
YELLOW = (255, 255, 0)

# Load background music
pygame.mixer.music.load("happy_birthday.mp3")  # put your mp3 file in same folder
pygame.mixer.music.play()

# Font
font = pygame.font.SysFont('comicsansms', 60)
small_font = pygame.font.SysFont('comicsansms', 30)

# Load image (optional)
# cake_img = pygame.image.load("cake.png")  # Optional, must be in same folder

# Animation variables
stars = []

for i in range(50):
    x = pygame.math.Vector2(width * pygame.math.random(), height * pygame.math.random())
    stars.append(x)

# Main loop
running = True
clock = pygame.time.Clock()

while running:
    screen.fill(BLACK)

    # Draw stars
    for star in stars:
        pygame.draw.circle(screen, YELLOW, (int(star.x), int(star.y)), 2)

    # Display birthday text
    text = font.render("ðŸŽ‰ Happy Birthday Rudra! ðŸŽ‚", True, PINK)
    screen.blit(text, (50, height//2 - 50))

    sub_text = small_font.render("Wishing you joy, love, and success!", True, WHITE)
    screen.blit(sub_text, (150, height//2 + 40))

    # Update display
    pygame.display.flip()

    # Event handling
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    clock.tick(30)

pygame.quit()
sys.exit()